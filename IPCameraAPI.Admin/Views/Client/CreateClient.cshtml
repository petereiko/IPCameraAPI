@model IPCameraAPI.Business.DTOs.ApplicationUserDto

@{
    ViewData["Title"] = "CreateClient";
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateClient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CameraIpAddress" class="control-label"></label>
                <input asp-for="CameraIpAddress" class="form-control" />
                <span asp-validation-for="CameraIpAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CameraUsername" class="control-label"></label>
                <input asp-for="CameraUsername" class="form-control" />
                <span asp-validation-for="CameraUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CameraPassword" class="control-label"></label>
                <input asp-for="CameraPassword" type="password" class="form-control" />
                <span asp-validation-for="CameraPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CameraPort" class="control-label"></label>
                <input asp-for="CameraPort" class="form-control" />
                <span asp-validation-for="CameraPort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubscriptionPlanId" class="control-label"></label>
                <select asp-for="SubscriptionPlanId" asp-items="Model.SubscriptionPlas" class="form-control">
                    <option value="">Select Subscription Plan</option>
                </select>
                <span asp-validation-for="SubscriptionPlanId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
